@{
    ViewBag.Title = "Create";
}

<h2><i class="fa fa-pencil"></i> Create</h2>
<div class="form-horizontal">
    <h4>Verify Booking</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel-body">
        <div class="form-horizontal">

            <hr />

            <div class="form-group">
                <div class="col-md-13">
                    <label for="txtCopied" class="col-sm-1 control-label">Past the Sheet here:</label>
                    <div class="col-sm-10">
                        @Html.TextArea("txtCopied", new { htmlAttributes = new { @class = "form-control pastSheet", required = "required" }, @cols = 140 })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <label for="txtDays" class="col-sm-2 control-label">How many days:</label>
                    <div class="col-sm-3">
                        <input type="text" style="width: 100px;" name="txtDays" class="form-control sm" id="txtDays" required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <button type="submit" class="btn btn-default btn-sm pull-left" title="Exec Report" value="btnExecReport" data-loading-text="
                        <i class='fa fa-circle-o-notch fa-spin'></i> Copied ">
                        <i class="fa fa-floppy-o"></i> &nbsp;
                        Create
                    </button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    <button type="button" class="btn btn-default btn-sm pull-left" onclick="location.href='@Url.Action("IndexVerifyBooking", "LISTs")'"
                            data-loading-text="
                        <i class='fa fa-circle-o-notch fa-spin'></i> Copied ">
                        <i class="fa fa-arrow-left"></i> &nbsp;
                        Back to List
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<script language="javascript" type="text/javascript">
    function h(e) {
        $(e).css({'height':'auto','overflow-y':'hidden'}).height(e.scrollHeight);
    }
    $('textarea').each(function () {
        h(this);
    }).on('input', function () {
        h(this);
    });
</script>