            <script type="text/javascript">
                $(document).ready(function () {
                    $('#divSucess').hide();
                    $('#divDanger').hide();
                    $('#divInfo').hide();
                    $('#divWarning').show();
                    $('#modalDialog').modal('show');
                });
            </script>
            ViewBag.StatusWarning = null;
        }


        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now - Egali Hostel</p>
        </footer>
