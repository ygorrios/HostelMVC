    <div class="container body-content" style="padding-top:15px;">
        @*<button id="launchModal" type="button" data-toggle="modal" data-target="#modalDialog" ></button>*@
        <div id="modalDialog" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="gridSystemModalLabel">System Message</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row alert alert-success divAlert" id="divSucess">
                            <div class="col-md-12">
                                <label class="glyphicon glyphicon-ok control-label">  @ViewBag.StatusSucess</label>
                                @*<span class="glyphicon glyphicon-ok" aria-hidden="true">@ViewBag.StatusSucess</span>*@  @*Cadastro Salvo com Sucesso!*@
                            </div>
                        </div>
                        <div class="row alert alert-danger divAlert" id="divDanger">
                            <div class="col-md-12">
                                <label class="glyphicon glyphicon-thumbs-down control-label">  @ViewBag.StatusDanger</label>
                                @*<span class="glyphicon glyphicon-thumbs-down" aria-hidden="true">@ViewBag.StatusDanger</span>*@
                            </div>
                        </div>
                        <div class="row alert alert-info divAlert" id="divInfo">
                            <div class="col-md-12">
                                <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true">  @ViewBag.StatusInfo</span>
                            </div>
                        </div>
                        <div class="row alert alert-warning divAlert" id="divWarning">
                            <div class="col-md-12">
                                <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true">  @ViewBag.StatusWarning</span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <span class="pull-left" aria-hidden="true">@DateTime.Now</span>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        @if (ViewBag.StatusSucess != null)
            {
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#divSucess').show();
                    $('#divDanger').hide();
                    $('#divInfo').hide();
                    $('#divWarning').hide();
                    $('#modalDialog').modal('show');
                });
            </script>
            ViewBag.StatusSucess = null;
        }
        @if (ViewBag.StatusDanger != null)
            {
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#divSucess').hide();
                    $('#divDanger').show();
                    $('#divInfo').hide();
                    $('#divWarning').hide();
                    $('#modalDialog').modal('show');
                });
            </script>
            ViewBag.StatusDanger = null;
